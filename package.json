{
    "name": "calva-fmt",
    "displayName": "Calva Formatter",
    "description": "Clojure and ClojureScript formatter for Visual Studio Code",
    "version": "0.0.4-WIP-B3",
    "publisher": "cospaia",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "keywords": [
        "Clojure",
        "ClojureScript",
        "EDN"
    ],
    "icon": "assets/calva-fmt.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/BetterThanTomorrow/calva-fmt.git"
    },
    "galleryBanner": {
        "color": "#344D81",
        "theme": "dark"
    },
    "badges": [
        {
            "url": "https://img.shields.io/badge/clojurians-editors-blue.svg?logo=slack",
            "href": "https://clojurians.slack.com/messages/editors/",
            "description": "Let's talk in the #editors channel on the Clojurians Slack"
        },
        {
            "url": "https://img.shields.io/badge/vscode--dev--community-clojure-blue.svg?logo=slack",
            "href": "https://vscode-dev-community.slack.com/messages/clojure/",
            "description": "See you in the #clojure channel on the VS Code Dev Slack"
        }
    ],
    "activationEvents": [
        "onLanguage:clojure"
    ],
    "main": "./out/ts/extension",
    "contributes": {
        "configuration": [
            {
                "title": "calva-fmt",
                "type": "object",
                "properties": {
                    "calva.fmt.indentation": {
                        "type": "boolean",
                        "default": true,
                        "description": "true if calva-fmt should correct the indentation of your code."
                    },
                    "calva.fmt.removeSurroundingWhitespace": {
                        "type": "boolean",
                        "default": true,
                        "description": "true if calva-fmt should remove whitespace surrounding inner forms. This will convert ( foo ) to (foo)."
                    },
                    "calva.fmt.removeTrailingWhitespace": {
                        "type": "boolean",
                        "default": true,
                        "description": "true if calva-fmt should remove trailing whitespace in lines. This will convert (foo) \\n to (foo)\\n."
                    },
                    "calva.fmt.insertMissingWhitespace": {
                        "type": "boolean",
                        "default": true,
                        "description": "true if calva-fmt should insert whitespace missing from between elements. This will convert (foo(bar)) to (foo (bar))."
                    },
                    "calva.fmt.autoAdjustIndentOnNewLines": {
                        "type": "boolean",
                        "default": true,
                        "description": "Should calva-fmt auto-adjust indents wehn new lines are created?"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "calva.fmt.toggleAutoAdjustIndent",
                "title": "Toggle auto adjusting of indent for new lines",
                "category": "Calva"
            }
        ],
        "keybindings": [
            {
                "command": "calva.fmt.toggleAutoAdjustIndent",
                "key": "ctrl+alt+v i"
            }
        ],
        "configurationDefaults": {
            "[clojure]": {
                "editor.wordSeparators": "\t ()\"':,;~@#$%^&{}[]`",
                "editor.formatOnType": true,
                "editor.autoIndent": false,
                "editor.formatOnPaste": true
            }
        }
    },
    "scripts": {
        "mkdirs": "mkdir -p ./out ./tests-out ./cljs_out",
        "linkdirs": "cd out && ln -s ../cljs_out/ && cd ..",
        "copydirs": "cp -r ./cljs_out ./out/",
        "clean": "rm -rf .shadow-cljs/ ./out ./tests-out ./cljs_out && npm run mkdirs",
        "watch-cljs": "npm run clean && npm run linkdirs && npx shadow-cljs watch :test :calva-fmt-lib",
        "watch-ts": "tsc -watch -p ./",
        "release": "npm run clean && npx shadow-cljs release :calva-fmt-lib && npm run copydirs && tsc -p ./",
        "compile": "npx shadow-cljs compile :calva-fmt-lib && tsc -p ./",
        "vscode:prepublish": "npm run release",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.66",
        "eslint": "^4.11.0",
        "shadow-cljs": "^2.4.8",
        "typescript": "^2.9.2",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "npm": "^6.1.0",
        "paredit.js": "^0.3.3"
    }
}
